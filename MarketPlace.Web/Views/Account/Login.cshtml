@model MarketPlace.DataLayer.DTOs.Account.LoginUserDTO
@{
    ViewData["Title"] = "ورود به حساب کاربری";
}
@section Scripts
{
    <partial name="_JqueryValidator" />
    <partial name="_CaptchaScripts"/>
}
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="index.html">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="customer_login mt-60">
    <div class="container">
        <div class="row">

            <!--register area start-->
            <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
                <div class="account_form register">
                    <h2>@ViewData["Title"]</h2>
                    <form method="post" asp-controller="Account" asp-action="Login">
                        <partial name="_CaptchaInput"/>
                        <p>
                            <label>تلفن همراه <span>*</span></label>
                            <input type="text" asp-for="Mobile">
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </p>
                        <p>
                            <label>رمز عبور <span>*</span></label>
                            <input type="password" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </p>
                        <p>
                            <a asp-area="" asp-controller="Account" asp-action="ForgotPassword">رمز عبور خود را فراموش کرده ام.</a>
                        </p>
                        <div class="login_submit">
                            <button type="submit">ورود</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>


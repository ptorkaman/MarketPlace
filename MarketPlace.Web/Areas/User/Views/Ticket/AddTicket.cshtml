@model MarketPlace.DataLayer.DTOs.Contact.AddTicketViewModelDTO
@using MarketPlace.DataLayer.Entities.Contact

@{
    ViewData["Title"] = "ثبت تیکت جدید";
}


@section Scripts
{
    <partial name="_JqueryValidator" />
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    @await Component.InvokeAsync("UserSideBar");
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

                        <div class="tab-pane fade  active show" id="account-details">
                            <h3>@ViewData["Title"]</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form asp-area="User" asp-controller="Ticket" asp-action="AddTicket">

                                            <label>عنوان</label>
                                            <input type="text" asp-for="Title">
                                            <span class="text-danger" asp-validation-for="Title"> </span>

                                            <br />
                                            <label>بخش مورد نظر</label>
                                            <select class="form-control" asp-for="TicketSection" asp-items="@(Html.GetEnumSelectList<TicketSection>())"></select>
                                            <span class="text-danger" asp-validation-for="TicketSection"> </span>

                                            <br />

                                            <label>اولویت</label>
                                            <select class="form-control" asp-for="TicketPriority" asp-items="@(Html.GetEnumSelectList<TicketPriority>())"></select>
                                            <span class="text-danger" asp-validation-for="TicketPriority"> </span>

                                            <br />

                                            <label>متن پیام</label>
                                            <textarea rows="10" class="form-control ck-content" asp-for="Text" ckeditor="1"></textarea>
                                            <span class="text-danger" asp-validation-for="Text"> </span>



                                            <div class="save_button primary_btn default_button">
                                                <button type="submit">ذخیره</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>